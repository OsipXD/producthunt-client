<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    card_view:cardCornerRadius="0dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/postThumbnail"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="15dp"
                android:contentDescription="@string/thumbnail_desc"
                android:background="#ddd"/>

        <TextView
                tools:text="My awesome product!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/postTitle"
                android:ellipsize="end"
                android:lines="1"
                android:layout_toEndOf="@+id/postThumbnail"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

        <TextView
                tools:text="It is awesome project for awesome people! And very-very-very long description here"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/postDesc"
                android:layout_below="@+id/postTitle"
                android:layout_above="@+id/postVotes"
                android:layout_alignParentEnd="true"
                android:ellipsize="end"
                android:lines="2"
                android:layout_toEndOf="@+id/postThumbnail"
                android:textSize="13sp"
                android:textColor="#999"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="0.95"/>

        <TextView
                tools:text="1984"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:paddingTop="4dp"
                android:layout_alignBottom="@+id/postThumbnail"
                android:layout_alignParentEnd="true"
                android:drawableStart="@drawable/upvote_icon"
                android:drawablePadding="2.5dp"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:id="@+id/postVotes"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>